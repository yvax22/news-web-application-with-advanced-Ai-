@model List<FND.Models.News>

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("Details", "News", new { id = item.Id })" class="text-decoration-none text-dark">
                    <div class="card h-100">
                        <img src="~/images/@item.image" class="card-img-top" style="height: 300px; object-fit: cover;" alt="@item.Title" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Content?.Substring(0, Math.Min(250, item.Content.Length))...</p>
                            <span class="btn btn-sm btn-outline-primary">اقرأ المزيد</span>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
