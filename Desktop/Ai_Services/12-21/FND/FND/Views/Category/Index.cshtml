@{
    ViewData["Title"] = "الصفحة الرئيسية";
}
<div class="container my-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3> إدارة التصنيفات</h3>
        <a href="/Category/New" class="btn btn-success">
             تصنيف جديد
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center" dir="rtl">
            <thead class="bg-white">
                <tr>
                    <th>الرقم</th>
                    <th>اسم التصنيف</th>
                    <th colspan="2">الخيارات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a href="/Category/Details/@item.Id" class="btn btn-info btn-sm">
                                تفاصيل
                            </a>
                        </td>
                        <td>
                            <a href="/Category/Delete/@item.Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('هل أنت متأكد من حذف التصنيف؟');">
                                حذف
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
