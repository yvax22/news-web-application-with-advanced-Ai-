@model List<dynamic>
@{
    ViewData["Title"] = "التوصيات";
    Layout = "_Layout";
}

<h2 class="mt-4">Recommended For You</h2>

<div class="news-cards d-flex flex-wrap gap-3">
    @foreach (var item in Model)
    {
        <div class="card shadow-sm" style="width: 100%; max-width: 400px; height: auto;">
            <div class="card-body">
                <h5 class="card-title">
                    @item.title
                </h5>
            </div>
        </div>
    }
</div>
