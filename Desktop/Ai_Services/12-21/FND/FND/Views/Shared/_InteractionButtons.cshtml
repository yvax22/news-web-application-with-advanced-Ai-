@model FND.Models.News  

@{
    var likesDict = ViewBag.LikesDict as Dictionary<int, int>;
    var commentsDict = ViewBag.CommentsDict as Dictionary<int, int>;
}

<div class="d-flex justify-content-between align-items-center px-3 pb-2">
    <button class="btn btn-outline-danger btn-sm toggle-like" data-news-id="@Model.Id">
        ❤️ أعجبني
        <span class="badge bg-danger like-count">
            @{
                var countlike = (likesDict != null && likesDict.ContainsKey(Model.Id)) ? likesDict[Model.Id] : 0;
            }
            @countlike
        </span>
    </button>

    <a asp-action="AllNews"
       asp-controller="News"
       asp-route-id="@Model.Id"
       class="btn btn-outline-primary btn-sm">
        💬 
        <span class="badge bg-primary">
            @{
                var countcomments = (commentsDict != null && commentsDict.ContainsKey(Model.Id)) ? commentsDict[Model.Id] : 0;
            }
            @countcomments
        </span>
    </a>
</div>
